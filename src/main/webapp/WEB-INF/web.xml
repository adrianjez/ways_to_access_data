    </servlet>
	<servlet-mapping>
	    <servlet-name>BooksController</servlet-name>
	    <url-pattern>/BooksController</url-pattern>
	</servlet-mapping>
	
	<!-- BooksRegistryController -->
	<servlet>
	    <description></description>
	    <display-name>BooksRegistryController</display-name>
	    <servlet-name>BooksRegistryController</servlet-name>
	    <servlet-class>webapp.BooksRegistryController</servlet-class>
    </servlet>
	<servlet-mapping>
	    <servlet-name>BooksRegistryController</servlet-name>
	    <url-pattern>/BooksRegistryController</url-pattern>
	</servlet-mapping>
</web-app>
